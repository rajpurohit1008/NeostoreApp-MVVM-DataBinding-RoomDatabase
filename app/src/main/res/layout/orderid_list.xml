<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="110dp">

        <ImageView
            android:id="@+id/orderid_image"
            android:layout_width="76dp"
            android:layout_height="83dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="#EDEDED"
            android:padding="2dp"
            android:src="@drawable/slider_img1"
            android:layout_marginLeft="15dp" />


        <TextView
            android:id="@+id/orderid_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/orderid_image"
            android:text="Pembroke"
            android:textColor="#1C1C1C"
            android:textSize="20sp"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/orderid_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/orderid_title"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/orderid_image"
            android:text="(Table)"
            android:textSize="15sp"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/orderid_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/orderid_category"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:text="QTY : 3"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/orderid_image"
            android:layout_marginLeft="10dp" />


        <TextView
            android:id="@+id/orderid_cost"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@id/orderid_category"
            android:layout_toRightOf="@id/orderid_qty"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="120dp"
            android:text="â‚¹45.00"
            android:layout_marginBottom="10dp"
            android:textColor="#333333"
            android:textSize="17sp" />




</RelativeLayout>